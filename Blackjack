#include <stdio.h>
#include <stdlib.h>
#include <locale.h>
#include <time.h>

struct jogador{
	int cartas[15];
};

int main(void) {
	
	setlocale(LC_ALL, "Portuguese");
	
	//Prmeiramente vou criar um baralho pq é o que normalmente utilizo neste jogo
	
	int baralho[52];
	
	int j = 0, i = 0, k = 0, l = 0;
	
	for (k = 0; k<4; k++)
	{
	
		for(i = 13; i>0; i--, j++)
		{
			if(i>10){
				baralho[j]=10;
			}else{
				baralho[j]=i;
			}
		}	
	}
	
	// Agora bora jogar
	
	int totalJogadores;
	
	printf("Digite a quantidade de jogadores: ");
	scanf("%d", &totalJogadores);
	
	struct jogador todosJogador[totalJogadores];
	
	
	//Distribuir as 2 primeiras cartas
	int carta1, repetir;
	int cartasSelecionadas[52];
	
	for(i = 0; i<52; i++){
		cartasSelecionadas[i] = -1;
	}
	
	srand(time(NULL));
	
	for(k = 0, i = 0; i < totalJogadores; i++)
	{
		for(j = 0; j < 2; j++)
		{
			
			//A carta já foi sorteada?
			repetir = 0;
			do{
				carta1 = rand() % 52;
				
				for(l = 0; l<52; l++){
					if(cartasSelecionadas[l] == carta1){
						repetir = 1;
						break;
					}
				}
			}while(repetir);
			
			//jogador i recebe carta1 na posicao j
			cartasSelecionadas[k] = carta1;
			todosJogador[i].cartas[j] = baralho[carta1];
			
			k++;
		}
	}
	
	for(i = 0; i<totalJogadores; i++){
		for(j = 0; j<2; j++){
			printf("%d\n", todosJogador[i].cartas[j]);
		}
	}
	
	
}
